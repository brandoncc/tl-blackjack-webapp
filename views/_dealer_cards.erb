<div id="dealer-cards" class="well span<%= "#{CARD_WELL_SPAN_WIDTH}" %> pull-right">
  <h5>Dealer's Cards</h5>
  <hr />
    <% if @game.all_players_finished? && !@game.dealer_turn_over? %>
        <div class="row">
          <% @dealer.cards.each_with_index do |card, index| %>
              <% if index % (CARD_WELL_SPAN_WIDTH / 2) == 0 %>
                  <% if index > 0 %>
                      <%= '</div><div class="row">' %>
                  <% end %>
              <% end %>
              <div class="span2"><img src="<%= "#{card.image}" %>" class="playing-card"/></div>
          <% end %>
        </div>
    <% else %>
        <div class="row">
          <div class="span<%= "#{PLAYER_CARD_WIDTH_AFTER_PLAY}" %>">
            <img src="<%= "#{@dealer.first_card.image}" %>" class="playing-card"/>
          </div>
          <div class="span<%= "#{PLAYER_CARD_WIDTH_AFTER_PLAY}" %>">
            <img src="/images/cards/cover.jpg" class="playing-card"/>
          </div>
        </div>
    <% end %>
</div>
